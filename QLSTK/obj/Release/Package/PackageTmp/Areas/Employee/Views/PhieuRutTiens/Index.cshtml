@model IEnumerable<QLSTK.Models.PhieuRutTien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Employee/Views/Shared/_Layout.cshtml";
}
<a class="w3-button w3-deep-purple" href="@Url.Action("Index", "Employee")"><i class="material-icons w3-small">arrow_back</i>TRỞ VỀ </a>
@Html.ActionLink("THÊM DỮ LIỆU", "Create", "PhieuRutTiens", new { @class = "w3-button w3-blue" })


<hr />
<h2>Trang quản lý phiếu rút tiền</h2>

<p>

</p>
<div class="w3-row-padding">
    @using (Html.BeginForm("BaoCaoPhieuRutTien", "PhieuRutTiens"))
    {
        <div class="w3-card w3-padding col-md-2">
            <label>tháng</label>
            <input type="number" name="thang" value="@DateTime.Now.Month" min="1" max="12" class="form-control" placeholder="Tháng" required />
            <label>năm</label>
            <input type="number" name="nam" value="@DateTime.Now.Year" min="2000" max="@DateTime.Now.Year" class="form-control" placeholder="Năm" required />
            <br />
            <button class="w3-bar-item w3-button w3-deep-purple w3-mobile" type="submit">In Báo Cáo</button>
        </div>
    }
    <div class="w3-card col-md-10">
        <table class="table ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SoTienRut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayRut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUser.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TienLai)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoTienRut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayRut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TienLai)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaPhieuRut }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaPhieuRut }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaPhieuRut })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>